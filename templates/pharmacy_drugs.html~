            <table id="grid" class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th data-column-id="name">Όνομα Φαρμάκου</th>
                        <th data-column-id="formula">Δραστική Ουσία</th>
                        <td data-column-id="company">Εταιρία</th>
